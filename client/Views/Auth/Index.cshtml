@model client.Models.User;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutWithoutNav.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-lightblue text-black">
                    <h3>Login</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Auth" asp-action="Login">
                        <div class="form-group mb-3">
                            <label asp-for="Email">Username</label>
                            <input type="email" class="form-control" id="Email" asp-for="Email" required />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password">Password</label>
                            <input type="password" class="form-control" asp-for="Password" id="Password" name="password" required />
                        </div>
                        <div class="form-group mb-3">
                            <button type="submit" class="btn bg-primary btn-sm text-white">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>